<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Department List View -->
    <record id="view_mtdn_department_list" model="ir.ui.view">
        <field name="name">mtdn.department.list</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <list string="Phòng ban">
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="manager_id"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="view_mtdn_department_form" model="ir.ui.view">
        <field name="name">mtdn.department.form</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <form string="Phòng ban">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="VD: Phòng Nhân sự"/>
                        </h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" placeholder="VD: HR" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group string="Thông tin chung">
                            <field name="parent_id"/>
                            <field name="manager_id"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Ghi chú">
                            <field name="description" nolabel="1" placeholder="Mô tả ngắn..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Department Search View -->
    <record id="view_mtdn_department_search" model="ir.ui.view">
        <field name="name">mtdn.department.search</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <search string="Tìm phòng ban">
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
                <filter name="group_by_company" string="Nhóm theo công ty" context="{'group_by':'company_id'}"/>
            </search>
        </field>
    </record>
</odoo>
