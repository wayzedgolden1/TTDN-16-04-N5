        <field name="job_id" ref="mtdn_job_acc_gen"/>
        <field name="start_date">2023-05-01</field>
        <field name="state">working</field>
        <field name="email">b@example.com</field>
    </record>

    <record id="mtdn_employee_03" model="mtdn.employee">
        <field name="code">EMP00003</field>
        <field name="name">Lê Văn C</field>
        <field name="gender">male</field>
        <field name="department_id" ref="mtdn_department_it"/>
