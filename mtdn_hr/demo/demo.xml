    <record id="mtdn_employee_08" model="mtdn.employee">
        <field name="code">EMP00008</field>
        <field name="name">Ngô Thị H</field>
        <field name="gender">female</field>
        <field name="department_id" ref="mtdn_department_it"/>
        <field name="job_id" ref="mtdn_job_dev"/>
