        <field name="start_date">2024-08-10</field>
        <field name="state">working</field>
        <field name="email">k@example.com</field>
    </record>

    <!-- Update department managers after employees exist -->
    <record id="mtdn_department_hr" model="mtdn.department">
        <field name="manager_id" ref="mtdn_employee_hr_mgr"/>
    </record>
    <record id="mtdn_department_it" model="mtdn.department">
        <field name="manager_id" ref="mtdn_employee_it_mgr"/>
    </record>
    <record id="mtdn_department_sale" model="mtdn.department">
        <field name="manager_id" ref="mtdn_employee_sale_mgr"/>
    </record>
</odoo>
