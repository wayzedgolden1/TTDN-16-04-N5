<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_room_list" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.list</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <list string="Phòng họp">
                <field name="code"/>
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="state" widget="badge"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mtdn_meeting_room_form" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.form</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <form string="Phòng họp">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="VD: Phòng Họp A"/></h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" placeholder="VD: ROOM_A" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group string="Thông tin phòng">
                            <field name="location"/>
                            <field name="capacity"/>
                            <field name="state"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Thiết bị">
                            <field name="equipment_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mtdn_meeting_room_search" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.search</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <search string="Tìm phòng họp">
                <field name="name"/>
                <field name="code"/>
                <field name="location"/>
                <filter name="filter_available" string="Sẵn sàng" domain="[('state','=','available')]"/>
                <filter name="filter_maintenance" string="Bảo trì" domain="[('state','=','maintenance')]"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>
